<div id="message_holder">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if flash.empty? -%>
  <h4 id="flash" class="alert" style="display:none"></h4>
<% else -%>
  <% flash.each do |key,value| -%>
    <h4 id="flash" class='alert <%= key %>'><%= value %></h4>
  <% end -%>
<% end -%>
</div>
