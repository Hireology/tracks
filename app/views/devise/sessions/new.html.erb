<div title="<%= t('login.account_login') %>" id="loginform" class="form">

  <%= render_flash %>

  <h3><%= t('login.please_login') %>:</h3>
  <div id="database_auth_form" style="display:block">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <table>
          <tr>
            <td><%= f.label :login %>:</td>
            <td><%= f.text_field :login, :autofocus => true, :class => :login_text %></td>
          </tr>
          <tr>
            <td><%= f.label :password %></td>
            <td><%= f.password_field :password, :class => :login_text %></td>
          </tr>
          <% if devise_mapping.rememberable? -%>
          <tr>
            <td><%= f.label :remember_me %></td>
            <td><%= f.check_box :remember_me %></td>
          </tr>
          <% end -%>
          <tr>
            <td></td>
            <td><%= f.submit t('login.sign_in'), :class => :primary %></td>
          </tr>
        </table>
      <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>


